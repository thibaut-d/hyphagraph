########################################
# Global
########################################

ENV=development
PROJECT_NAME=hyphagraph
LOG_LEVEL=info


########################################
# PostgreSQL
########################################

POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=hyphagraph
POSTGRES_USER=hyphagraph
POSTGRES_PASSWORD=hyphagraph

# SQLAlchemy / asyncpg (backend only)
DATABASE_URL=postgresql+asyncpg://hyphagraph:hyphagraph@db:5432/hyphagraph


########################################
# Backend (FastAPI)
########################################

API_HOST=0.0.0.0
API_PORT=8000

# Security (change in production)
SECRET_KEY=change-me-generate-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=600
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT Configuration
JWT_SECRET_KEY=change-me-generate-another-secure-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin User (created automatically on startup if doesn't exist)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=5

# Email Configuration
EMAIL_ENABLED=false
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=HyphaGraph

# SMTP Configuration (uncomment and configure to enable email)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# Email Verification
EMAIL_VERIFICATION_REQUIRED=false
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24


########################################
# Frontend (React - development)
########################################

# API URL as seen from the browser
REACT_APP_API_BASE_URL=/api


########################################
# LLM Providers (optional)
########################################

OPENAI_API_KEY=
GEMINI_API_KEY=
MISTRAL_API_KEY=


########################################
# Inference / Computation
########################################

INFERENCE_CACHE_ENABLED=true
INFERENCE_MAX_RELATIONS=1000


########################################
# Development flags
########################################

SQL_DEBUG=false
STRICT_VALIDATION=true
