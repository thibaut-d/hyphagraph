########################################
# Global
########################################

ENV=development
PROJECT_NAME=hyphagraph
LOG_LEVEL=info


########################################
# PostgreSQL
########################################

POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=hyphagraph
POSTGRES_USER=hyphagraph
POSTGRES_PASSWORD=hyphagraph

# SQLAlchemy / asyncpg (backend only)
DATABASE_URL=postgresql+asyncpg://hyphagraph:hyphagraph@db:5432/hyphagraph


########################################
# Backend (FastAPI)
########################################

API_HOST=0.0.0.0
API_PORT=8000

# Security (change in production)
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=600


########################################
# Frontend (React - development)
########################################

# API URL as seen from the browser (local dev)
REACT_APP_BASE_URL=http://localhost:8000


########################################
# LLM Providers (optional)
########################################

OPENAI_API_KEY=
GEMINI_API_KEY=
MISTRAL_API_KEY=


########################################
# Inference / Computation
########################################

INFERENCE_CACHE_ENABLED=true
INFERENCE_MAX_RELATIONS=1000


########################################
# Development flags
########################################

SQL_DEBUG=false
STRICT_VALIDATION=true
